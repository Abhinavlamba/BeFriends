<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NameFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's your first name?"
            android:id="@+id/ques"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="64dp"
            android:textStyle="bold"
            android:translationY="-10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ques"
            android:id="@+id/text"
            android:text="You won't be able to change this later."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:translationY="-10dp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/FrameLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:textSize="16sp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingLeft="12dp"
                    android:hint="Add your first name"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </FrameLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <ImageView
            android:src="@drawable/slide_right"
            android:id="@+id/next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="24dp"
            android:backgroundTint="@color/white"
            android:rotation="90"/>
    </RelativeLayout>

</FrameLayout>