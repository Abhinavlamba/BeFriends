<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EducationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/new_education">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/headline">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:rotation="180"
                android:src="@drawable/arrow"
                android:id="@+id/back"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/checkmark"
                android:id="@+id/done"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Add Education"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/md_grey_200" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headline"
            android:layout_marginTop="16dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColorHint="@color/md_grey_600"
                android:textColor="@color/black"
                android:hint="Field of study"
                android:padding="16dp"
                android:background="@color/white"
                android:id="@+id/field_of_study"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/md_grey_200"
                android:layout_below="@id/field_of_study"
                android:id="@+id/view1"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColorHint="@color/md_grey_600"
                android:textColor="@color/black"
                android:hint="Institution"
                android:padding="16dp"
                android:background="@color/white"
                android:id="@+id/institution"
                android:layout_below="@id/view1"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/md_grey_200"
                android:layout_below="@id/institution"
                android:id="@+id/view2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:orientation="horizontal"
                android:id="@+id/linear_layout">
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textColorHint="@color/md_grey_600"
                    android:textColor="@color/black"
                    android:hint="Graduation year"
                    android:padding="16dp"
                    android:background="@color/white"
                    android:id="@+id/graduation_year"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/md_grey_200"
                android:layout_below="@id/linear_layout"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativelayout2">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:id="@+id/headline2">

            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:rotation="180"
                android:src="@drawable/arrow"
                android:id="@+id/back2"
                android:visibility="gone"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Education"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/md_grey_200" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/education1"
            android:text="Add education"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@id/headline2"
            android:layout_margin="16dp"
            android:elevation="4dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_below="@id/education1"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/education_list"
            android:layout_margin="4dp"
            android:layout_below="@id/education1">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</FrameLayout>